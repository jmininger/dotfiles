{
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Alt+Shift+Q → Workspace 9, Lock",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "q",
                                    "modifiers": { "mandatory": ["option", "shift"] }
                                },
                                "to": [
                                    {
                                        "shell_command": "/opt/homebrew/bin/aerospace workspace 9; osascript -e 'tell application \"System Events\" to keystroke \"q\" using {command down, control down}'"
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Caps Lock → Ctrl in terminals, Cmd elsewhere",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.brave\\.Browser$"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [
                                    { "set_variable": { "name": "caps_as_cmd", "value": 1 } },
                                    { "key_code": "left_command" }
                                ],
                                "to_after_key_up": [
                                    { "set_variable": { "name": "caps_as_cmd", "value": 0 } }
                                ],
                                "type": "basic"
                            },
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.brave\\.Browser$"
                                        ],
                                        "type": "frontmost_application_if"
                                    },
                                    {
                                        "name": "caps_as_cmd",
                                        "type": "variable_if",
                                        "value": 1
                                    }
                                ],
                                "from": {
                                    "key_code": "tab",
                                    "modifiers": { "mandatory": ["command"], "optional": ["shift"] }
                                },
                                "to": [{ "key_code": "tab", "modifiers": ["left_control"] }],
                                "type": "basic"
                            },
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.brave\\.Browser$"
                                        ],
                                        "type": "frontmost_application_if"
                                    },
                                    {
                                        "name": "caps_as_cmd",
                                        "type": "variable_if",
                                        "value": 1
                                    }
                                ],
                                "from": {
                                    "key_code": "tab",
                                    "modifiers": { "mandatory": ["command", "shift"] }
                                },
                                "to": [{ "key_code": "tab", "modifiers": ["left_control", "shift"] }],
                                "type": "basic"
                            },
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.apple\\.Terminal$",
                                            "^com\\.googlecode\\.iterm2$",
                                            "^io\\.alacritty$",
                                            "^com\\.github\\.wez\\.wezterm$",
                                            "^net\\.kovidgoyal\\.kitty$",
                                            "^com\\.mitchellh\\.ghostty$"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [{ "key_code": "left_control" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "caps_lock",
